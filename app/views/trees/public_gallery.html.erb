<% provide(:title, "Public Gallery") %>

<div style="">
  <div id="carousel">
    <% @trees.each do |t| %>
      <div id="tree-id-<%= t.id %>" class="cloud9-item">
        <%= image_tag t.image %>
        <div class="tree-description center hide">
          <%= t.description %>
        </div>
      </div>
    <% end %>
  </div>
  <div id="buttons" class="center row">
    <button class="left btn btn-default btn-lg col-md-1 col-md-offset-1">
      ←
    </button>
    <div class="col-md-3 col-md-offset-1">
      <%= form_tag public_gallery_trees_path, :method => 'get' do %>
        <div class="row">
          <div class="col-sm-9">
            <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search" %>
          </div>
          <div class="col-sm-3" style="margin-left: -30px;">
            <%= button_tag(type: "submit", class: "btn btn-default") do %>
              <i class="glyphicon glyphicon-search"></i>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <nav class="navbar navbar-default col-md-2 col-md-offset-1">
      <div class="container-fluid">
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
              <ul class="dropdown-menu action-nav">
                <li><a href="#">Comment on tree</a></li>
                <li><a href="#" id="download-image">Save image to disk</a></li>
                <li><a href="#">Share on social media</a></li>
              </ul>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
    <button class="right btn btn-default btn-lg col-md-1 col-md-offset-1">
      →
    </button>
  </div>

  <div class="col-sm-2 pull-right">
    <%= link_to "Back to tree viewer", trees_path, class: "btn btn-default btn-lg" %>
  </div>
  <div class="col-sm-2 pull-left">
    <%= link_to "My gallery", gallery_path(current_user), class: "btn btn-default btn-lg" %>
  </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="download-tree">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Save to disk</h4>
      </div>
      <div class="modal-body">
        <div>
          <%= link_to "Save image", nil, id: "down-image-link" %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script type="text/javascript">
$(document).ready(function(){
  $("#carousel").Cloud9Carousel( {
    buttonLeft: $("#buttons > .left"),
    buttonRight: $("#buttons > .right"),
    autoPlay: 0,
    bringToFront: true,
    onRendered: function( carousel ) {
      var item = $("#carousel"  ).data("carousel").nearestItem();
      $(".tree-description").addClass("hide");
      $('#' + item.element.id).find(".tree-description").removeClass("hide");
    }
  });
  
  $('#download-image').click(function() {
    $('#download-tree').modal();
    obj = $("#carousel").data("carousel").nearestItem();
    $('#down-image-link').attr("href", "<%= download_image_trees_path %>" + "?id=" + obj.element.id.match(/\d+/g)[0]);
    return false;
  })
});
</script>