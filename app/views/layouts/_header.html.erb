<div class="center">
  <%= image_tag "phylo-toolbox-logo-huge.png", alt: "Home" %>
</div>

<nav class="navbar navbar-static">
  <div class="container">
    <a class="navbar-toggle" data-toggle="collapse" data-target=".nav-collapse">
      <span class="glyphicon glyphicon-chevron-down"></span>
    </a>
    <div class="nav-collapse collase">
      <ul class="nav navbar-nav">
        <li class="<%= 'active' if(params[:controller] == 'raw_extractions') %>"><%= link_to "Home", root_path %></li>
        <% unless current_user.nil? %>
          <li class="<%= 'active' if(params[:controller] == 'trees') %>"><%= link_to "Tree viewer", trees_path %></li>
        <% end %>
        <li class="<%= 'active' if(params[:controller] == 'static_pages' && params[:action] == "about") %>"><%= link_to "About", static_pages_about_path %></li>
        <li class="<%= 'active' if(params[:controller] == 'static_pages' && params[:action] == "faq") %>"><%= link_to "FAQ", static_pages_faq_path %></li>
        <li class="<%= 'active' if(params[:controller] == 'static_pages' && params[:action] == "videos") %>"><%= link_to "Videos", static_pages_videos_path %></li>
        <% unless current_user.nil? %>
          <li class="<%= 'active' if(params[:controller] == 'watch_relationships' && params[:action] == "gallery") %>"><%= link_to "Gallery", gallery_path(current_user) %></li>
        <% end %>
        <li><%= link_to "Feedback", static_pages_faq_path %></li>
      </ul>
      <ul class="nav navbar-right navbar-nav">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <% if user_signed_in? %>
              <%= current_user.name %>
              <i class="glyphicon glyphicon-chevron-down"></i>
            <% else %>
              <i class="glyphicon glyphicon-user"></i> 
              <i class="glyphicon glyphicon-chevron-down"></i>
            <% end %>
          </a>
          <ul class="dropdown-menu">
            <% if user_signed_in? %>
              
              <!-- <li class="divider"></li> -->
              <li><%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %></li>
            <% else %>
              <li><%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %></li>
              <!-- <li class="divider"></li> -->
              
            <% end %>
           </ul>
        </li>  
      </ul>
    </div>		
  </div>
</nav><!-- /.navbar -->