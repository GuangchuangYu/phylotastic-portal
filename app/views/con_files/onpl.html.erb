<% provide(:title, "Upload one-name-per-line file") %>  
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h2>I have a list to upload</h2>
    <%= form_for @con_file do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="form-group">
        <%= f.label :document, "(*) Choose a document " %>
        <%= f.file_field :document, class: "input-file", style: "margin-bottom: 30px;" %>
      
        <%= f.label :name, "(*) Enter a name for this list" %>
        <%= f.text_field :name, class: "form-control", style: "width: 50%;margin-bottom: 20px;" %>
      
        <%= f.label :description, "Description" %>
        <%= f.text_area :description, class: "form-control", style: "width: 50%;margin-bottom: 20px;" %>
      </div>
      <%= f.submit "Get list", class: "btn btn-default btn-lg btn-primary" %>
    <% end %>
  </div>
</div>
